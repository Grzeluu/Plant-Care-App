<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextHeading">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IconStyle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@drawable/text_color_list</item>
        <item name="android:ems">10</item>
    </style>

    <style name="FirstButton">
        <item name="android:background">@drawable/bg_first_bt</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondButton">
        <item name="android:background">@drawable/bg_second_bt</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/green_700</item>
    </style>

    <style name="SeekBarStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">46</item>
        <item name="android:splitTrack">false</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SmallTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ProgressBarTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="SmallIconStyle">
        <item name="android:layout_width">13dp</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:tint">@color/white</item>
    </style>
</resources>